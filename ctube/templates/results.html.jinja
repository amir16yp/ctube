<!DOCTYPE html>
<html>
    <head>
        <title>{{ page_title }}</title>
        <meta charset="utf-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="stylesheet" href="/static/css/main.css">
        <link rel="icon" href="/static/images/favicon.png">
    </head>
    <body>
        <nav data-embedded="{{ embedded }}">
            <div class="nav-row">
                <a class="button homepage" href="/">âŒ‚</a>

                <form action="/results">
                    <input
                        size=50
                        type="search"
                        name="search_query"
                        placeholder="Search"
                        value="{{ field_query }}"
                        autocomplete=true
                        {% if not embedded %}
                            autofocus=true
                        {% endif %}
                    >
                </form>
            </div>
        </nav>

        <div class="thumb-grid">
            {% for entry in entries %}
                <div class="thumb-wrapper">
                    <a
                        href="{{ entry.watch_url }}"
                        class="thumb placeholder {{ entry.seen_class }}"
                        target="_top"
                    >
                        <img src="/static/images/no_thumbnail.png">
                        <div class="thumb-title">{{ entry.title }}</div>
                        <div class="thumb-uploader">{{ entry.uploader }}</div>
                        <div class="thumb-details">
                            <span>
                                <span class="icon">â¦¿ </span>&nbsp;
                                {{ entry.human_views }}
                            </span>
                        </div>
                    </a>

                    <iframe
                        title="{{ entry.title }}"
                        src="{{ entry.preview_url }}"
                        scrolling="no"
                        loading="lazy"
                    ></iframe>
                </div>
            {% endfor %}
        </div>

        <nav class="nav-row">
            <a class="qutebrowser" href="{{ prev_url }}">Previous</a>
            <a class="button" href="{{ prev_url }}">ðŸ¡ </a>

            <span class="page-num" data-num="{{ page_num }}">
                {{ page_num }}
            </span>

            <a class="qutebrowser" href="{{ next_url }}">Next</a>
            <a class="button" href="{{ next_url }}">ðŸ¡¢</a>
        </nav>
    </body>
</html>
