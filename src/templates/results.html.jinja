<!DOCTYPE html>
<html>
    <head>
        <title>{{ query }}</title>
        <meta charset="utf-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="stylesheet" href="static/css/main.css">
    </head>
    <body>
        <div class="thumb-grid">
            {% for entry in entries %}
                <iframe
                    title="{{ entry.title }}"
                    src="{{ entry.preview_url }}"
                    scrolling="no"
                    loading="lazy"
                ></iframe>
            {% endfor %}
        </div>

        <div class="page-buttons">
            <a class="button" href="{{ previous_url }}">Previous</a>
            <span class="page-num">{{ page_num }}</span>
            <a class="button" href="{{ next_url }}">Next</a>
        </div>
    </body>
</html>
