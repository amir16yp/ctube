<!DOCTYPE html>
<html>
    <head>
        <title>{{ search_query }}</title>
        <meta charset="utf-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="stylesheet" href="static/css/main.css">
    </head>
    <body>
        <div class="thumb-grid">
            {% for entry in entries %}
                <iframe
                    title="{{ entry.title }}"
                    src="{{ entry.preview_url }}"
                    scrolling="no"
                    loading="lazy"
                ></iframe>
            {% endfor %}
        </div>

        <nav>
            <form action="/results">
                <input
                    type="search"
                    name="search_query"
                    placeholder="Search"
                    value={{ search_query }}
                    autocomplete=true
                    autofocus=true
                >
            </form>

            <a class="button previous" href="{{ previous_url }}">&lt;</a>
            <span class="page-num">{{ page_num }}</span>
            <a class="button next" href="{{ next_url }}">&gt;</a>
        </nav>
    </body>
</html>
