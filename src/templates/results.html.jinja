<!DOCTYPE html>
<html>
    <head>
        <title>{{ search_query }}</title>
        <meta charset="utf-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="stylesheet" href="static/css/main.css">
    </head>
    <body>
        <div class="thumb-grid">
            {% for entry in entries %}
                <div class="thumb-wrapper">
                    <a
                        href="{{ entry.watch_url }}"
                        class="thumb placeholder"
                        target="_top"
                    >
                        <img src="static/images/no_thumbnail.png">
                        <div class="thumb-title">{{ entry.title }}</div>
                        <div class="thumb-uploader">{{ entry.uploader }}</div>
                        <!-- <div class="thumb-date"> - </div> -->
                        <div class="thumb-views">{{ entry.view_count }}</div>
                    </a>

                    <iframe
                        title="{{ entry.title }}"
                        src="{{ entry.preview_url }}"
                        scrolling="no"
                        loading="lazy"
                    ></iframe>
                </div>
            {% endfor %}
        </div>

        {% include "navbar.html.jinja" %}
    </body>
</html>
