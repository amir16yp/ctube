<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>
        <meta charset="utf-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="stylesheet" href="/static/css/main.css">
    </head>

    <body class="watch-body">
        <script type="application/javascript">
            function resizeCommentFrame(frame, canScroll=false) {
                console.log(frame)
                const doc  = document
                const list =
                    frame.contentWindow.document.getElementById("comment-list")

                if (! list.scrollHeight) return

                frame.style.height = list.scrollHeight + "px"

                const pos = doc.documentElement.scrollTop || doc.body.scrollTop

                if (canScroll && pos > frame.offsetTop)
                    frame.scrollIntoView({behavior: "smooth"})
            }

            window.onresize = () => {
                console.log("rr")
                const doc = document
                resizeCommentFrame(doc.getElementById("thin-comments-frame"))
                resizeCommentFrame(doc.getElementById("wide-comments-frame"))
            }
        </script>

        <div class="video-column">
            <iframe
                class="video-frame"
                loading="lazy"
                src="https://www.youtube-nocookie.com/embed/{{ id }}"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
            ></iframe>

            <div class="video-info-line">
                <span class="title">{{ title }}</span>
                <div class="video-details">
                    <span><span class="icon">👤 </span>
                        <a href="{{ channel_url }}">{{ uploader }}</a>
                    </span>
                    <span><span class="icon">🠝</span> {{ human_date }}</span>
                    <span><span class="icon">⦿</span> {{ human_views }}</span>
                    <span><span class="icon good">👍</span> {{ likes }}</span>
                    <span><span class="icon bad">👎</span> {{dislikes}}</span>
                </div>
            </div>

            <p class="description box">{{ html_description|safe }}</p>

            <iframe
                id="wide-comments-frame"
                class="comments-frame widescreen"
                src="{{ comments_url }}"
                scrolling="no"
                loading="lazy"
                onLoad="resizeCommentFrame(this, true)"
            ></iframe>
        </div>

        <iframe
            class="related-frame"
            src="{{ related_url }}"
            scrolling="no"
            loading="lazy"
        ></iframe>

        <iframe
            id="thin-comments-frame"
            class="comments-frame thinscreen"
            src="{{ comments_url }}"
            scrolling="no"
            loading="lazy"
            onLoad="resizeCommentFrame(this, true)"
        ></iframe>
    </body>
</html>
