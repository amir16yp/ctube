<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="static/css/main.css">
    </head>
    <body>
        <a href="{{ watch_url }}" class="thumb" target="_top">
            <div class="image-wrapper">
                <img src="{{ small_thumbnail }}" loading="lazy">
                <div class="thumb-duration">{{ human_duration }}</div>
            </div>

            <div class="thumb-title">{{ title }}</div>
            <div class="thumb-uploader">{{ uploader }}</div>
            <div class="thumb-details">
                <span class="icon">⦿</span> {{ human_views }}
                <span class="icon">🠝</span> {{ human_date }}
            </div>
        </a>
    </body>
</html>
